<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >
    <!--里面空间的属性-->
    <solid
        android:color="#00E2E2E2" >
    </solid>
    <!--圆角的半径-->
    <corners
        android:radius="15dp">
    </corners>
    <!--边的属性-->
    <stroke
        android:color="#FF0000"
        android:width="2dp">
    </stroke>
    <!--控制文字与边框的距离-->
    <padding
        android:left="5dp"
        android:right="5dp"
        android:bottom="5dp"
        android:top="5dp"></padding>
</shape>
